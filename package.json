{
	"name": "@fast-china/eslint-config-legacy",
	"version": "1.0.2",
	"description": "Fast ESLint Legacy 规则库.",
	"type": "module",
	"keywords": [
		"fast",
		"ESLint"
	],
	"license": "Apache-2.0",
	"homepage": "https://fastdotnet.com",
	"bugs": {
		"url": "https://gitee.com/FastDotnet/fast.eslint.config.legacy/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://gitee.com/FastDotnet/fast.eslint.config.legacy"
	},
	"author": "小方",
	"files": [
		"./Fast.png",
		"./LICENSE",
		"./README.md",
		"./README.zh.md",
		"./dist"
	],
	"main": "dist/index.cjs",
	"exports": {
		".": {
			"default": "./dist/index.cjs"
		},
		"./rules": {
			"types": "./dist/rules/index.d.ts",
			"require": "./dist/rules/index.js",
			"import": "./dist/rules/index.js"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"lint:eslint": "eslint --max-warnings 0 \"src/**/*.{vue,js,ts,tsx}\" --fix",
		"lint:prettier": "prettier --write \"src/**/*.{vue,js,ts,jsx,tsx,md,json,css,scss,less,html}\"",
		"lint": "pnpm lint:eslint && pnpm lint:prettier"
	},
	"peerDependencies": {
		"eslint": "^8",
		"prettier": "^3"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^7",
		"@typescript-eslint/parser": "^7",
		"eslint-config-prettier": "^10",
		"eslint-plugin-import": "^2",
		"eslint-plugin-jsonc": "^2",
		"eslint-plugin-markdown": "^3",
		"eslint-plugin-prettier": "^5",
		"eslint-plugin-regexp": "^1",
		"eslint-plugin-vue": "^9",
		"globals": "^13",
		"jsonc-eslint-parser": "^2",
		"local-pkg": "^1",
		"typescript-eslint": "^7",
		"vue-eslint-parser": "^9"
	},
	"devDependencies": {
		"@types/eslint": "^8",
		"@types/node": "^24",
		"eslint": "^8",
		"eslint-define-config": "^1",
		"prettier": "^3",
		"tsup": "^6",
		"typescript": "^5"
	},
	"engines": {
		"node": ">=16.0.0"
	}
}
